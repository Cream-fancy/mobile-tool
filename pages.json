{
  "easycom": {
    "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "功能列表",
        "navigationBarBackgroundColor": "#2979ff",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/tv/index",
      "style": {
        "navigationBarTitleText": "影视",
        "enablePullDownRefresh": false,
        "navigationBarBackgroundColor": "#2979ff",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/tv/detail",
      "style": {
        "navigationBarTitleText": "影片详情",
        "enablePullDownRefresh": false,
        "navigationBarBackgroundColor": "#2979ff",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/tv/history",
      "style": {
        "navigationBarTitleText": "播放历史",
        "enablePullDownRefresh": false,
        "navigationBarBackgroundColor": "#2979ff",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "components/video-player/index",
      "style": {
        "navigationBarTitleText": "播放器",
        "enablePullDownRefresh": false,
        "navigationBarBackgroundColor": "#2979ff",
        "navigationBarTextStyle": "white"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
